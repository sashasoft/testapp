<%= form_with model: post do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <% @post.errors.full_messages_for(:title).each do |msg|%>
      <div><%= msg %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :text %>
    <%= form.text_field :text %>
    <% @post.errors.full_messages_for(:text).each do |msg|%>
      <div><%= msg %></div>
    <% end %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
